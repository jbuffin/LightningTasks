# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/								controllers.Application.index

# Ajax routes
GET		/ajax/tasks						controllers.Tasks.getAll
GET		/ajax/tasks/:id					controllers.Tasks.getById(id: Long)
POST	/ajax/tasks/new					controllers.Tasks.newTask
POST	/ajax/tasks/:id/delete			controllers.Tasks.remove(id: Long)

# Javascript routes - Define the list of these
GET		/javascriptroutes			controllers.Application.javascriptRoutes

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file					controllers.Assets.at(path="/public", file)
